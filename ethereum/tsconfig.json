{
  "display": "Node 14",
  "compilerOptions": {
    "lib": ["es2020"],
    "target": "es2020",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./dist",
    "declaration": true,
    "rootDirs": ["test", "script", "typechain-types"],
  },
  "include": [
    "./test",
    "./scripts",
    "./typechain-types"
  ],
  "files": [
    "index.ts",
    "./hardhat.config.ts"
  ]
}
